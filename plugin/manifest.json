{
	"manifest_version": 2,
	"name": "plugin_desconto",
	"version": "1.0",
	"description": "Plugin de descontos do Chrome.",
	"icons": {
    	"48": "icon48.png",
        "128": "icon128.png"
    },
	"permissions":[
		"tabs",
		"activeTab",
    	"storage",
		"https://*/*"
	],
	"browser_action" : {
		"default_popup": "index.html"
	},
	"content_scripts": [
	    {
	      "matches": ["*://*/*"],
	      "js": ["jquery.js"],
		  "all_frames": true
	    }
  	],
	"background" : {
		"scripts":[
			"plugin_desconto.js"
		]	
	}
	
}
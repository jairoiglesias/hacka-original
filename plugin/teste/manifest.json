{
  "manifest_version": 2,
  "name": "Singular",
  "version": "1.3",
  "description": "Preenche Cupom de Desconto",
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Singular"
  },
  "icons": {
    "19": "icon_19.png",
    "32": "icon_32.png",
    "64": "icon_64.png",
    "128": "icon_128.png"
  },

  "browser_action":{
    "default_icon": "icon.png",
    "default_popup": "tela2.html"
},

  "background": {
      "scripts": [
          "background.js"
      ]
  },
  "permissions": [
    "tabs", 
    "http://*/*", 
    "https://*/*"
  ]
}